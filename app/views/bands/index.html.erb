    
<div id="page-content-wrapper" style="margin-left:3%; padding-right:10%;">
<p id="notice"><%= notice %></p>

<h1>Listing Bands</h1>       
 
<table>
  <thead>
    <tr>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.bands.each do |band| %>
      <tr>
        <td><%= band.code %></td>
        <td><%= link_to 'Show', band %></td>
        <td><%= link_to 'Edit', edit_band_path(band) %></td>
        <td><%= link_to 'Destroy', band, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.bands.count == 1%>
<%else%>
    <%= link_to 'New Band', new_band_path %>
<%end%>
</div>