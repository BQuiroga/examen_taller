
<div class="row" align="left" style="margin-left: 30px;  " >
     <div class="container"> 
   <h1 style="border-bottom: 1px solid #A6AAA9; color: #000000; text-align=centre;">Manual Daily Tracking</h1>
<%= form_for (@band_info) do |f| %>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id%>
  </div>
  <div class="field">
        <%= f.hidden_field :band_id, :value => current_user.bands.first.id%>
        </div>
  <div class="field">
    <%= f.label :steps %><br>
    <%= f.number_field:steps %>
  </div>
  <div class="field">
    <%= f.label :calories %><br>
    <%= f.number_field :calories %>
  </div>
  <div class="field">
    <%= f.label:lat %><br>
    <%= f.number_field :lat %>
  </div>
  <div class="field">
    <%= f.label:long %><br>
    <%= f.number_field :long %>
  </div>
  <div>
   <%= f.label :time_started %><br>
    <%= f.datetime_select :created_at%>
</div>
<div>
     <%= f.label :time_updated%><br>
    <%= f.datetime_select :updated_at %>
    </div>
  <div class="actions">
    <%= f.submit("create") %>
  </div>

<% end %>

</div>
</div>

