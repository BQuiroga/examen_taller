<div id="page-content-wrapper">
       
        <h1>GOALS</h1>
        <div class="container marketing">

      <!-- Three columns of text below the carousel -->

      <div class="row">
        <% @goals.each do |tgoal| %>
      
        <div class="col-lg-4">
        
          <img class="img-circle" src="<%=tgoal.type_goal.img%>" alt="Generic placeholder image" width="140" height="140">
          <!>
          <h2><td><%= tgoal.type_goal.tip%></td></h2>
          <p>Goal:<%= tgoal.goal %></p>
          <p>Frequency:<%= tgoal.frequency %></p>
          <%= link_to 'Show', tgoal ,class:"btn btn-default"%>
          
          <%= link_to 'Destroy', tgoal, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default" %>
        </div>
       
      
      <% end %>

      </div>
      


            
        
