<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Type</th>
      <th>Burned calories</th>
      <th>Hearth rate</th>
      <th>Total time</th>
      <th>Time started</th>
      <th>Time finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
      <tr>
        <td><%= goal.user_id %></td>
        <td><%= goal.type %></td>
        <td><%= goal.burned_calories %></td>
        <td><%= goal.hearth_rate %></td>
        <td><%= goal.total_time %></td>
        <td><%= goal.time_started %></td>
        <td><%= goal.time_finished %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

