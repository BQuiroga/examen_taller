
<title>Edit Band | FiTrack</title>
<div id="page-content-wrapper">
<div class="container"> 
  <h1 style="border-bottom: 1px solid #A6AAA9; color: #000000;">Dream Sessions</h1>

<p id="notice" align="center"><%= notice %></p> 
<br>
<table class="table talbe-striped">
  <col width="40%">
  <col width="20%">
  <col width="20%">
  <col width="20%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Time started</th>
      <th>Time finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dream_sessions.each do |dream_session| %>
      <tr>
        <td><%= dream_session.title %></td>
        <% if dream_session.time_started == nil%>
          <td>&nbsp; Not started</td>
        <%else%>
        <td><%= dream_session.time_started.to_formatted_s(:long_ordinal) %></td>
        <%end%>
        <% if dream_session.time_started == nil%>
          <td>&nbsp;  Not finished</td>
        <%else%>
        <td><%= dream_session.time_finished.to_formatted_s(:long_ordinal) %></td>
        <%end%>

        <td><%= link_to 'Show', dream_session %>
        <%= link_to 'Edit', edit_dream_session_path(dream_session) %>
        <%= link_to 'Destroy', dream_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dream session', new_dream_session_path %>

</div>
</div>